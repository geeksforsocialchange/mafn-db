<%= semantic_form_for @representative do |f| %>
  <%= f.inputs do %>
    <%= f.input :job_title %>
    <%= f.input :start, :as => :date_picker %>
    <%= f.input :finish, :as => :date_picker %>
    <%= f.input :member, collection: Member.order(:last_name) %>
    <%= f.input :organisation, collection: Organisation.order(:name) %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
