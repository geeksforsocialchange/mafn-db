<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table class="js-table-sort">
  <thead>
    <tr>
      <th>Category</th>
      <th>Question</th>
      <th>Response format</th>
      <th></th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <th class="js-table-sort__searchable">Category</th>
      <th class="js-table-sort__searchable">Question</th>
      <th>Response format</th>
      <th></th>
    </tr>
  </tfoot>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.category %></td>
        <td><%= question.question %></td>
        <td><%= question.response %></td>
        <td><%= link_to 'Show', question %>
        <%= link_to 'Edit', edit_question_path(question) %>
        <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

