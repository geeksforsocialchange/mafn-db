<h1>Listing Question Lists</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Question set</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_lists.each do |question_list| %>
      <tr>
        <td><%= question_list.question %></td>
        <td><%= question_list.question_set %></td>
        <td><%= question_list.weight %></td>
        <td><%= link_to 'Show', question_list %></td>
        <td><%= link_to 'Edit', edit_question_list_path(question_list) %></td>
        <td><%= link_to 'Destroy', question_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

