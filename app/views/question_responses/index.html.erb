<p id="notice"><%= notice %></p>

<h1>Listing Question Responses</h1>

<table>
  <thead>
    <tr>
      <th>Responder</th>
      <th>Question</th>
      <th>Response</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_responses.each do |question_response| %>
      <tr>
        <td><%= question_response.responder.full_name %></td>
        <td><%= question_response.question.question %></td>
        <td><%= question_response.response %></td>
        <td><%= question_response.subject %></td>
        <td><%= link_to 'Show', question_response %></td>
        <td><%= link_to 'Edit', edit_question_response_path(question_response) %></td>
        <td><%= link_to 'Destroy', question_response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

