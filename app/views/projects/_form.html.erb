<%= semantic_form_for @project do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: 5 } %>
    <%= f.input :start, :as => :date_picker %>
    <%= f.input :finish, :as => :date_picker %>
    <%= f.input :region %>
    <%= f.input :primary_partner_organisation, :collection => Organisation.order(:name) %>
    <%= f.input :resident_champion, :collection => Member.order(:last_name) %>
    <%= f.input :resident_seconder, :collection => Member.order(:last_name) %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
