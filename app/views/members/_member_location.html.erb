<%= semantic_form_for(member) do |f| %>
  <%= f.inputs do %>
    <div id="tasks">
      <%= f.semantic_fields_for :member_locations do |member_location| %>
        <%= render 'member_location_fields', f: member_location %>
      <% end %>
      <div class="links">
        <p>
          <%= link_to_add_association 'add location', f, :member_locations %>
        </p>
      </div>
    </div>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
