<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <tt><%= @member.membership_code %></tt>
</p>

<p>
  <strong>Name:</strong>
  <%= @member.first_name %> <%= @member.last_name %>
</p>

<p>
  <strong>DoB:</strong>
  <%= @member.dob %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @member.gender %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @member.tel %>
</p>

<p>
  <strong>Mob:</strong>
  <%= @member.mob %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<h2>Locations</h2>
<ul>
  <% MemberLocation.where(member: @member).each do |l| %>
    <% location = l.location %>
    <li><%= location.full_address %> (<%= l.from %> -- <%= l.to || "now" %>)</li>
  <% end %>
</ul>

<h2>Questions</h2>

<h3>Complete a survey as this user</h3>
<ul class="question-sets">
  <% @question_sets.each do |qs| %>
    <li><%= link_to qs.title, "/question_sets/#{qs.id}/respond/#{@member.id}" %></li>
  <% end %>
</ul>

<h3>Recent responses</h3>
<dl class="question-responses">
  <% @member.date_sorted_responses.each do |r| %>
    <dt><strong><%= r.question.question %></strong></dt>
    <dd><%= link_to r.formatted_response, question_response_path(r.id) %> <em>(<%= time_ago_in_words(r.created_at) %> ago, <%= link_to "edit", edit_question_response_path(r.id) %>)</em></dt>
  <% end %>
</dl>

<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Back', members_path %>

<h2>Attendances</h2>

<ul>
  <% @member.events.each do |e| %>
    <li><%= "#{e.pretty_start} (#{e.duration}). #{e.name}, #{e.location}." %></li>
  <% end %>
</ul>
