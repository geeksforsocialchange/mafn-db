<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <tt><%= @member.membership_code %></tt>
</p>

<p>
  <strong>Name:</strong>
  <%= @member.first_name %> <%= @member.last_name %>
</p>

<p>
  <strong>DoB:</strong>
  <%= @member.dob %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @member.gender %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @member.tel %>
</p>

<p>
  <strong>Mob:</strong>
  <%= @member.mob %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<h2>Locations</h2>
<ul>
  <% MemberLocation.where(member: @member).each do |l| %>
    <% location = l.location %>
    <li><%= location.full_address %> (<%= l.from %> -- <%= l.to || "now" %>)</li>
  <% end %>
</ul>

<h2>Question Responses</h2>
<dl class="question-responses">
  <% @member.date_sorted_responses.each do |q| %>
    <dt><%= q.question.question %></dt>
    <dd><%= link_to q.response, question_response_path(q.id) %> <em>(<%= time_ago_in_words(q.created_at) %> ago)</em></dt>
  <% end %>
</dl>

<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Back', members_path %>
