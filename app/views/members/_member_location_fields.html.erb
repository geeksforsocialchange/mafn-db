<div class="nested-fields js-member-location-fields">
  <%= f.inputs do %>
    <div class="js-location-from-list">
      <%= f.input :location, :collection => Location.order('name ASC').all, :prompt => 'Choose an existing location' %>
      <%= f.input :from, :as => :date_picker %>
      <%= f.input :to, :as => :date_picker %>
    </div>
    <%= link_to_add_association 'edit this location', f, :location %>
    <%= link_to_remove_association "remove location", f %>
  <% end %>
</div>
