<%= semantic_form_for @partner do |f| %>
  <%= f.inputs do %>
    <%= f.input :start, :as => :date_picker %>
    <%= f.input :finish, :as => :date_picker %>
    <%= f.input :partner_type %>
    <%= f.input :organisation, collection: Organisation.order(:name) %>
    <%= f.input :project, collection: Project.order(:name) %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
