<% unless smart_listing.empty? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= smart_listing.sortable "Name", :name %></th>
        <th>Category</th>
        <th><%= smart_listing.sortable "Date", :start %></th>
        <th>Finished?</th>
        <th>Location</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.category %></td>
          <td><%= event.start.to_date %></td>
          <td><%= display_tick event.start > Date.today %></td>
          <td><%= event.location %></td>
          <td><%= link_to 'Show', event %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <h2>No records!</h2>
<% end %>
