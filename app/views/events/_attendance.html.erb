<%= semantic_form_for(event) do |f| %>
  <%= f.inputs do %>
    <div id="tasks">
      <%= f.semantic_fields_for :attendances do |attendance| %>
        <%= render 'attendance_fields', f: attendance %>
      <% end %>
      <div class="links">
        <p>
          <%= link_to_add_association 'add member', f, :attendances %>
        </p>
      </div>
    </div>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
