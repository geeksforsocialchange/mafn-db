<%= semantic_form_for(@event) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :start, :as => :date_picker %>
    <%= f.input :finish, :as => :date_picker %>
    <%= f.input :description, :as => :text, :input_html => { :class => 'autogrow', :rows => 10 } %>
    <%= f.input :location, :as => :text, :input_html => { :class => 'autogrow', :rows => 5 } %>
  <% end %>
  <%= f.actions do %>
     <%= f.action :submit, :as => :button %>
     <%= f.action :cancel, :as => :link %>
   <% end %>
<% end %>
