<h1>Listing Arrangers</h1>

<%= link_to 'New Arranger', new_arranger_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Project</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arrangers.each do |arranger| %>
      <tr>
        <td><%= arranger.project.name %></td>
        <td><%= arranger.event.name %></td>
        <td><%= link_to 'Show', arranger %></td>
        <td><%= link_to 'Edit', edit_arranger_path(arranger) %></td>
        <td><%= link_to 'Destroy', arranger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
