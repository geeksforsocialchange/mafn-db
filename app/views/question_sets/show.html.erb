<p id="notice"><%= notice %></p>

<h1>
  <%= @question_set.title %>
</h1>

<h2>Questions in this set</h2>

<dl>
  <% @sorted_questions.each do |q| %>
    <dt class="question">
      <strong><%= q.question_lists.where(question_set: @question_set).first.weight || 0 %>. </strong>
      <%= q.question %>
    </dt>
    <dd>
      <%= q.response %>
    </dd>
  <% end %>
</dl>

<%= link_to 'Edit', edit_question_set_path(@question_set) %> |
<%= link_to 'Back', question_sets_path %>
