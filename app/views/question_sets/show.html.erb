<p id="notice"><%= notice %></p>

<h1>
  <%= @question_set.title %>
</h1>

<h2>Questions in this set</h2>

<dl>
  <% @question_set.question_lists.each do |l| %>
    <dt class="question">
      <strong><%= l.weight || 0 %>. <%= l.question.category %></strong>
      <%= l.question.question %>
    </dt>
    <dd>
      <%= l.question.response %>
    </dd>
  <% end %>
</dl>

<%= link_to 'Edit', edit_question_set_path(@question_set) %> |
<%= link_to 'Back', question_sets_path %>
